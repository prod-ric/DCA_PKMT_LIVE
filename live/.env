# DCA Polymarket Live Trader
# Set TRADING_MODE=paper or TRADING_MODE=real
TRADING_MODE=paper

# Capital
INITIAL_CAPITAL=500
GLOBAL_TP_PCT=0.20

# Polymarket API (required for real mode only)
# POLYMARKET_PRIVATE_KEY=0x...
# POLYMARKET_API_KEY=
# POLYMARKET_API_SECRET=
# POLYMARKET_API_PASSPHRASE=

# Markets config
MARKETS_FILE=live/markets.json

# State persistence
STATE_FILE=live/state.json
TRADE_LOG_FILE=live/trades.jsonl

# Logging
LOG_LEVEL=INFO

# Timing
LAST_MINUTES_ONLY=10
LATE_GAME_THRESHOLD=0.90

# Hedge
HEDGE_ENABLED=true
HEDGE_AMOUNT=30.0
HEDGE_DROP_POINTS=0.12
HEDGE_DROP_WINDOW=90

# Early entry
EARLY_ENTRY_ENABLED=true

# Panic flip
PANIC_FLIP_ENABLED=true

# Data collection (only for single-process mode)
# Set to true to collect data in the same process as trading
# Recommended: run collector.py separately for speed
ENABLE_COLLECTION=false
COLLECTOR_DATA_DIR=live/data
COLLECTOR_FLUSH_INTERVAL=60
COLLECTOR_BUFFER_SIZE=1000
