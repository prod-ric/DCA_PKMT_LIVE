# ── DCA Polymarket Live Trader ──

# Trading mode: paper | live | parquet
TRADING_MODE=paper

# ── Polymarket API (required for live mode) ──
POLYMARKET_API_KEY=
POLYMARKET_API_SECRET=
POLYMARKET_API_PASSPHRASE=
POLYMARKET_PRIVATE_KEY=
# POLYMARKET_CLOB_URL=https://clob.polymarket.com
# POLYMARKET_WSS_URL=wss://ws-subscriptions-clob.polymarket.com/ws/market
# CHAIN_ID=137

# ── Capital ──
INITIAL_CAPITAL=500
GLOBAL_TP_PCT=0.20
# CAPITAL_PER_MARKET=0  # 0 = auto-split across markets

# ── Timing ──
# LAST_MINUTES_ONLY=10
# LATE_GAME_THRESHOLD=0.90

# ── Early entry ──
# EARLY_ENTRY_ENABLED=true
# EARLY_ENTRY_MIN_PROGRESS=0.40
# EARLY_ENTRY_MAX_PROGRESS=0.90
# EARLY_ENTRY_PRICE_THRESHOLD=0.70

# ── Hedge ──
# HEDGE_ENABLED=true
# HEDGE_DROP_POINTS=0.12
# HEDGE_AMOUNT=30.0

# ── Panic flip ──
# PANIC_FLIP_ENABLED=true

# ── Persistence ──
# STATE_FILE=state.json
# TRADE_LOG_FILE=trades.jsonl

# ── Markets file ──
# MARKETS_FILE=live/markets.json

# ── Parquet replay ──
# PARQUET_FILE=snapshots_27jan_reconstructed.parquet
# PARQUET_RESAMPLE=2s

# ── Data collection ──
# COLLECTOR_DATA_DIR=data
# COLLECTOR_FLUSH_INTERVAL=60
# COLLECTOR_BUFFER_SIZE=1000

# ── Logging ──
LOG_LEVEL=INFO
